{% extends 'base.twig'%}

{% block title %}Slim porject{% endblock %}

{% block body %}
	<h1>Liste des produits</h1>
	<main class="container">
		<section class="row">
			{% for product in products %}
			<div class="col-4">
				<div class="card">
					<img src="/img/uploads/{{ product.imageName() }}" class="card-img-top"
					alt="Image de {{ product.imageName() }}">
					<div class="card-body">
						<h5 class="card-title">{{ product.name() }}</h5>
						<p class="card-text">{{ product.getShortDescription() }}</p>
						<a href="/produit/{{ product.id }}" class="card-link btn btn-outline-info">DÃ©tail</a>
					</div>
				</div>
			</div>
			{% endfor %}
		</section>
	</main>
{% endblock %}